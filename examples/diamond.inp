&GLOBAL
  RUN_TYPE GEO_OPT
  PROJECT_NAME xtb
  PREFERRED_DIAG_LIBRARY SCALAPACK
&END GLOBAL
&FORCE_EVAL
 METHOD QS
&DFT
  &QS
   METHOD XTB
   &XTB
    CHECK_ATOMIC_CHARGES F   
    DO_EWALD  T              
   &END XTB
  &END QS
  &SCF
   SCF_GUESS RESTART
   MAX_SCF 500
   EPS_SCF 1.E-8
  &END SCF
 &END DFT
  &SUBSYS
    &TOPOLOGY
      COORD_FILE_FORMAT  xyz
      COORD_FILE_NAME  diamond.xyz
      CONNECTIVITY OFF
      &CENTER_COORDINATES
      &END CENTER_COORDINATES
     &END TOPOLOGY
    &CELL
      ABC  3.56075 3.56075 3.56075
      ALPHA_BETA_GAMMA 90.00000000 90.00000000 90.00000000
      PERIODIC XYZ
    &END CELL
  &END SUBSYS
&END FORCE_EVAL
&MOTION
   &GEO_OPT
     OPTIMIZER  BFGS
     MAX_ITER  1600
     &BFGS
     &END BFGS
   &END GEO_OPT 
&END MOTION




