&GLOBAL
  RUN_TYPE GEO_OPT
  PROJECT_NAME xtb
  PREFERRED_DIAG_LIBRARY SCALAPACK
  PRINT_LEVEL MEDIUM
&END GLOBAL
&FORCE_EVAL
 METHOD QS
 STRESS_TENSOR ANALYTICAL
 &PRINT
    &STRESS_TENSOR      ON
        FILENAME        =stress
    &END STRESS_TENSOR
  &END PRINT
&DFT
  &QS
   METHOD XTB
   &XTB
    CHECK_ATOMIC_CHARGES T   
    DO_EWALD  T              
   &END XTB
  &END QS
  &SCF
   SCF_GUESS RESTART
   MAX_SCF 1000
   EPS_SCF 1.E-5
  &END SCF
 &END DFT
  &SUBSYS
    &TOPOLOGY
      COORD_FILE_FORMAT  xyz
      COORD_FILE_NAME  diamond.xyz
      CONNECTIVITY OFF
      &CENTER_COORDINATES
      &END CENTER_COORDINATES
     &END TOPOLOGY
    &CELL
      ABC  3.635882 3.635882 3.635882
      ALPHA_BETA_GAMMA 90.00000000 90.00000000 90.00000000
      PERIODIC XYZ
    &END CELL
  &END SUBSYS
&END FORCE_EVAL
&MOTION
   &GEO_OPT
     OPTIMIZER  CG
     MAX_ITER  1600
	 MAX_FORCE 1.E-4
     &CG
     &END CG
   &END GEO_OPT 
&END MOTION




